<div class="page-header">
  <h1>Todos los estados</h1>
</div>

<%= link_to "Nuevo Estado", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
  <div class="status">
    <strong><%= status.user.nombre_completo %></strong>
    <p><%= status.contenido %></p>
    <div>
      <%= link_to "Hace " + time_ago_in_words(status.created_at), status %> | 
      <%= link_to "Mostrar", status %>
      <span class="admin">
        <%= link_to "Editar", edit_status_path(status) %> |
        <%= link_to "Eliminar", status, method: :delete, data: {confirm: "EstÃ¡s seguro que quieres borrar este estadio"} %>
      </span>
    </div>
  </div>
<% end %>